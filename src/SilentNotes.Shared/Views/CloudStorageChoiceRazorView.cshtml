@using SilentNotes.ViewModels
@model CloudStorageChoiceViewModel
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <base href="@Model.HtmlBase">
    <title>SilentNotes</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no, user-scalable=no">

    <link href="bootstrap.min.css" rel="stylesheet" />
    <link href="silentnotes.css" rel="stylesheet" />

    <script src="jquery-3.3.1.min.js"></script>
    <script src="bootstrap.bundle.min.js"></script>
    <script src="silentnotes.js"></script>

    <style type="text/css">
        .list-group {
            max-width: 300px;
        }
        .list-group-item {
            font-weight: bold;
            cursor: pointer;
        }
        .choice-icon {
            margin-right: 16px;
            width: 64px;
            height: 32px;
        }
    </style>
    <script>
    </script>
</head>
<body>
    <nav id="navigation" class="d-flex">
        <button class="nav-item mr-auto" onclick="bind(event);" data-binding="GoBack" title="@Model.Language["back"]">@{WriteLiteral(Model.Icon["arrow-left"]);}</button>
    </nav>

    <div id="content" class="container-fluid p-4">
        <h1>@Model.Language["cloud_service_choice"]</h1>

        <div class="list-group">
            @foreach (var serviceChoice in @Model.ServiceChoices)
            {
                <button type="button" class="list-group-item list-group-item-action" onclick="bind(event)" data-binding="choose" data-cloudstorageid="@serviceChoice.CloudStorageId">
                    <img class="choice-icon" src="@serviceChoice.Icon" />
                    @serviceChoice.Title
                </button>
            }
        </div>

        <button type="button" class="btn btn-secondary my-4" hidden onclick="bind(event)" data-binding="GoBack">@Model.Language["cancel"]</button>
    </div>
</body>
</html>
